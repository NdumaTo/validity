  "dependencies": {},
  "devDependencies": {
    "mocha": "1",
    "should": "2",
    "istanbul": "0",
    "jshint": "2"
  },
  "keywords": [
    "validation"
  ],
  "repository": "git://github.com/serby/validity",
  "main": "./property-validators",
  "scripts": {
    "lint": "./node_modules/.bin/jshint .",
